<script>
  const currentYear: number = new Date().getFullYear();
  const footer = document.querySelector("footer") as HTMLElement;
  footer.innerText = `Año actual: ${currentYear} © Curso de Astro`;

  //solo en el lado del cliente ( client side rendering )
  const timeParagraph = document.querySelector("#current-time") as HTMLElement;

  timeParagraph.innerText = `Momento actual real: ${new Date().toLocaleTimeString()}`;
</script>
